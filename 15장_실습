#include<stdio.h>

void func(int (*fp)(int, int, int));
int sum(int a, int b, int c);
int mul(int a, int b, int c);
int max(int a, int b, int c);
int min(int a, int b, int c);
int re(int a, int b, int c);
int sum1(int a, int b, int c);

int main(){
    int sel;

    printf("01 두 정수의 합\n");
    printf("02 두 정수의 차이\n");
    printf("03 두 정수 중에서 큰 값 계산\n");
    printf("04 두 정수의 곱\n");
    printf("05 두 정수 중에서 작은 값 계산\n");
    printf("06 세 정수의 합\n");
    printf("원하는 연산을 선택하세요: ");
    scanf("%d", &sel);
    switch(sel){
        case 1: func(sum); break;
        case 2: func(re); break;
        case 3: func(max); break;
        case 4: func(mul); break;
        case 5: func(min); break;
        case 6: func(sum1); break;
        
    }
    return 0;
}

void func(int (*fp)(int, int, int)){
    int a, b, c;
    int res;

    printf("두 정수의 값을 입력하세요: ");
    scanf("%d%d%d", &a, &b, &c);
    res = fp(a, b, c);
    printf("결괏값은 : %d\n", res);
}

int sum(int a, int b, int c){
    return (a + b);
}

int sum1(int a, int b, int c){
    return (a + b + c);
}

int re(int a, int b, int c){
    return (a - b);
}

int mul(int a, int b, int c){
    return (a * b);
}

int max(int a, int b, int c){
    if (a > b) return a;
    else return b;
}

int min(int a, int b, int c){
    if (a < b) return a;
    else return b;
} 
